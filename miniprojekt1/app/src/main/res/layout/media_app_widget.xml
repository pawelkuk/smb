<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ivGoldens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Miniprojekt1.AppWidgetContainer">

    <TextView
        android:id="@+id/tvWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="?attr/appWidgetBackgroundColor"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btWidget1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WWW" />

    <Button
        android:id="@+id/btWidget2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random doggy" />

    <Button
        android:id="@+id/btWidget3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next song" />

    <ImageView
        android:id="@+id/ivDogs"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        app:srcCompat="@drawable/golden1" />



</LinearLayout>